{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":automergeDigest",
    ":automergePr",
    ":enablePreCommit",
    ":maintainLockFilesWeekly",
    ":pinDevDependencies",
    ":prHourlyLimitNone",
    "abandonments:recommended",
    "config:recommended",
    "docker:pinDigests",
    "group:allNonMajor",
    "helpers:pinGitHubActionDigests"
  ],
  "labels": ["dependencies", "renovate"],
  "minimumReleaseAge": "10 days",
  "packageRules": [
    {
      "description": "Only run normal updates once a  week automatically but allow manual runs during office hours.",
      "matchPackageNames": ["*"],
      "schedule": ["on monday before 4am", "after 4am"],
      "automerge": true
    }
  ],
  "rebaseWhen": "conflicted",
  "semanticCommits": "enabled",
  "vulnerabilityAlerts": {
    "automerge": false,
    "labels": ["security", "dependencies"],
    "minimumReleaseAge": null
  }
}
